---
import { projects } from "../../config/projects.json";
---

<h2 class="font-bold text-5xl my-8 text-green-600 text-center">ALGUNOS CASOS DE EXITO</h2>

{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row text-center md:text-left mb-2">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4 text-gray-900">{project.title}</h2>
        <p class="text-slate-900">{project.description}</p>
        <button>Buy Now</button>
      </div>
      <div class="flex-1">
        <img src="images/fingerprint.svg" class="w-72 m-auto" />
      </div>
    </div>
  ))
}
